<% if post.post_good_by?(current_user) %>
  <%= link_to post_post_goods_path(post), method: :delete, remote: true do %>
    <i class="fas fa-thumbs-up"></i>
    <%= post.post_goods.count %>
  <% end %>
<% else %>
  <%= link_to post_post_goods_path(post), method: :post, remote: true do %>
    <i class="far fa-thumbs-up"></i>
    <%= post.post_goods.count %>
  <% end %>
<% end %>