<div class="container-fluid">
  <div class="row">
    <%= render 'layouts/sidebar' %>
    <div class="col-md-10 mx-auto">
      <div class="row-md-10 pb-3">
        <h2>Post</h2>
      </div>
      <%= javascript_pack_tag 'posts/new' %>
      <%= form_with model: @post_new, url: posts_path, local: true, method: :post do |f| %>
        <div class="form-group">
          <%= f.text_field :title, class: "form-control", placeholder: "title" %>
        </div>
        <div class="form-group">
          <%= f.text_field :content_url, class: "form-control", placeholder: "url" %>
        </div>
        <div class="form-group">
          <%= f.text_area :description, class: "form-control", placeholder: "description" %>
        </div>
        <div class="form-group">
         <%= f.select :genre_ids, options_from_collection_for_select(Genre.all, :id, :name), {}, {class: 'form-control js-searchable', multiple: true} %>
        </div>
        <div class="form-group">
          <%= f.submit "Submit", class: "btn btn-primary mb-2" %>
        </div>
      <% end %>
    </div>
  </div>
</div>