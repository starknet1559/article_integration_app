<% if current_user != user %>
  <% if current_user.following?(user) %>
    <%= link_to "Following", user_relationships_path(user.id), method: :delete, class: "btn btn-outline-success btn-sm rounded-pill" %>
  <% else %>
    <%= link_to "Follow", user_relationships_path(user.id), method: :post, class: "btn btn-success btn-sm rounded-pill" %>
  <% end %>
<% end %>