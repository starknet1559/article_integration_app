<% if post.post_bad_by?(current_user) %>
  <%= link_to post_post_bads_path(post), method: :delete, remote: true do %>
    <i class="fas fa-thumbs-down"></i>
    <%= post.post_bads.count %>
  <% end %>
<% else %>
  <%= link_to post_post_bads_path(post), method: :post, remote: true do %>
    <i class="far fa-thumbs-down"></i>
    <%= post.post_bads.count %>
  <% end %>
<% end %>