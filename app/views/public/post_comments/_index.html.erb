<div class="border p-3">
  <div class="media">
    <% post.post_comments.each do |comments| %>
      <%= image_tag comments.user.get_profile_image(100,100), class: "mr-3" %>
      <div class="media-body">
        <h5 class="mb-1 text-primary"><%= comments.user.name %></h5>
        <%= comments.comment %>
        <% if comments.user == current_user %>
          <%= link_to "Destroy", post_post_comment_path(comments.post,comments), method: :delete, remote: true %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>