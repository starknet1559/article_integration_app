<div class="container">
  <header class="blog-header py-3">
    <div class="row flex-nowrap justify-content-between align-items-center">
      <div class="col-4 pt-1"></div>
      <div class="col-4 text-center">
        <%= link_to "Article Aggregator", root_path, class: "blog-header-logo text-dark" %>
      </div>
      <div class="col-4 d-flex justify-content-end align-items-center">
        <nav class="my-2 my-md-0 mr-md-3">
        <% if user_signed_in? %>
          <%= link_to "Home", posts_path , class: "p-2 text-dark" %>
          <%= link_to "My page", user_path(current_user) , class: "p-2 text-dark" %>
          <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "btn btn-outline-primary" %>
        <% end %>
        </nav>
      </div>
    </div>
  </header>
</div>