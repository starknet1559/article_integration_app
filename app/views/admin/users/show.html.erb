<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="media mt-2">
        <%= image_tag @user.get_profile_image(100,100), class: "rounded-circle" %>
        <div class="media-body ml-3">
          <h5 class="my-3"><%= @user.name %></h5>
          <%= @user.created_at %>
        </div>
      </div>
      <div class="my-3 border-top">
        <h5 class="my-2">About</h5>
        <p><%= @user.biography %></p>
      </div>
    </div>
  </div>

  <h5><%= @posts.count %>Stories</h5>
  <% @posts.each do |f| %>
    <div class="card my-3">
      <div class="row no-gutters">
        <div class="col-md-auto">
          <div class="card-body">
            <div class="row">
              <h6 class="card-title">Title:<%= f.title %></h6>
              <%= link_to f.user.name, admin_user_path(f.user.id), class: "ml-3 text-muted" %>
              <%= link_to "Delete", admin_post_path(f.id), method: :delete, class: "ml-3 text-danger", data: { confirm: "本当に削除しますか？" } %>
            </div>
            <a href="<%= f.content_url %>"><%= f.content_url %></a>
            <p class="card-text"><%= f.description %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>